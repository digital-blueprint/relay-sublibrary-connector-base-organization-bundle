{
    "name": "dbp/relay-sublibrary-connector-campusonline-bundle",
    "description": "A template bundle for the Relay API gateway",
    "type": "symfony-bundle",
    "license": "AGPL-3.0-or-later",
    "require": {
        "php": ">=7.3",
        "ext-json": "*",
        "api-platform/core": "^2.6",
        "dbp/relay-base-organization-bundle": "^0.2.0",
        "dbp/relay-core-bundle": "^0.1.43",
        "dbp/relay-sublibrary-bundle": "^0.1.6",
        "symfony/framework-bundle": "^5.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^1.0.0",
        "phpstan/phpstan-phpunit": "^1.0.0",
        "phpunit/phpunit": "^9",
        "symfony/browser-kit": "^5.4",
        "symfony/http-client": "^5.4",
        "symfony/monolog-bundle": "^3.7",
        "symfony/phpunit-bridge": "^5.4",
        "vimeo/psalm": "^4.2.1"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "git@gitlab.tugraz.at:dbp/library/dbp-relay-sublibrary-bundle.git"
        },
        {
            "type": "vcs",
            "url": "git@gitlab.tugraz.at:dbp/relay/dbp-relay-base-organization-connector-campusonline-bundle.git"
        }
    ],
    "autoload": {
        "psr-4": {
            "Dbp\\Relay\\SublibraryConnectorCampusonlineBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dbp\\Relay\\SublibraryConnectorCampusonlineBundle\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "7.3"
        },
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "scripts": {
        "test": [
            "@php vendor/bin/phpunit"
        ],
        "phpstan": [
            "@php vendor/bin/phpstan analyze --ansi"
        ],
        "psalm": [
            "@php vendor/bin/psalm"
        ],
        "lint": [
            "@composer run cs",
            "@composer run phpstan",
            "@composer run psalm"
        ],
        "cs-fix": [
            "@php vendor/bin/php-cs-fixer --ansi fix"
        ],
        "cs": [
            "@php vendor/bin/php-cs-fixer --ansi fix --dry-run --diff"
        ],
        "coverage": [
            "@php vendor/bin/phpunit --coverage-html _coverage"
        ]
    }
}
